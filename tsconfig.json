{
	"compilerOptions": {
	  "lib": [
		"es2017"
	  ],
	  "module": "commonjs",
	  "outDir": "./dist/",
	  "target": "es2017",
	  "strict": true,
	  "esModuleInterop": true,
	  "skipLibCheck": true,
	  "forceConsistentCasingInFileNames": true,
	  "moduleResolution": "node",
	  "sourceMap": true,
	  "declaration": true
	},
	"include": [
	  "credentials/**/*",
	  "nodes/**/*",
	  "shared/**/*"
	],
	"exclude": [
	  "node_modules/**/*",
	  "dist/**/*"
	]
  }